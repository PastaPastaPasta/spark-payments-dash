<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kodaxx.dashpay" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>DashPay</name>
    <description>DashPay is a mobile point-of-sale solution allowing merchants to accept Dash.</description>
    <author email="kodaxx@gmail.com" href="http://kodaxx.github.io">kodaxx</author>
    <content src="index.html" />
    <icon src="icon.png" />
    <access origin="https://coinmarketcap.com" subdomains="true" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="file://" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="orientation" value="portrait" />
    <preference name="KeyboardShrinksView" value="true" />
    <preference name="android-windowSoftInputMode" value="adjustPan" />
    <preference name="Fullscreen" value="false" />
</widget>
